<!-- res/drawable/button_turquoise_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Çok Açık Turkuaz Arka Plan Rengi -->
    <solid android:color="#E0FFFF" /> <!-- Çok açık turkuaz rengi -->

    <!-- Çerçeve Rengi ve Kalınlığı -->
    <stroke android:width="1dp" android:color="#00CED1" /> <!-- Çerçeve için turkuaz tonunda renk -->

    <!-- Yuvarlak Köşeler -->
    <corners android:radius="8dp" />

    <!-- İç Kenar Boşlukları -->
    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
</shape>
